{
    "extends": "google",
    "rules": {
        "require-jsdoc": [1,  {
            "require": {
                "FunctionDeclaration": false,
                "MethodDefinition": false,
                "ClassDeclaration": false
            }
        }],
        "indent": [2, 4],
        "max-len": [1, 120],
        "dot-notation": 0,
        "quotes": [2, "single"],
        "quote-props": [2, "consistent"],
        "key-spacing": 1,
        "keyword-spacing": 1,
        "space-before-blocks": 1,
        "spaced-comment": 1,
        "no-trailing-spaces": 1,
        "arrow-parens": 1,
        "no-multiple-empty-lines": 1,
        "comma-spacing": 1,
        "camelcase": [2, {"properties": "never"}],
        "valid-jsdoc": 1,
        "brace-style": 1,
        "no-unused-vars": 1,
        "space-in-parens": 1
    }
}
